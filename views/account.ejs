<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Sluck</title>
    <link href="https://fonts.googleapis.com/css?family=Lato:400,700" rel="stylesheet"> 
    <link rel="stylesheet" href="style.css">
</head>

<body>

    <div id="account">
        <h1>Sluck</h1>

        <% if (locals.page == "/login") {%>
            <form action="/login" method="POST">
                <input id="login" type="text" name="login" placeholder="Login" value= <%- locals.login %>>
                <input id="password" type="password" name="password" placeholder="Password" value= <%- locals.password %>>
                <button id="connect">Login</button>
            </form>

            <a href="/signup">Create an account</a>

        <%} else {%>
            <form action="/signup" method="POST">
                <input id="login" type="text" name="login" placeholder="Login" value= <%- locals.login %>>
                <input id="password" type="password" name="password" placeholder="Password" value= <%- locals.password %>>
                <button id="create">Create account</button>
            </form>

            <a href="/login">Already an account? Sign in</a>
        <%}%>
    </div>


    <!-- JQUERY -->
    <script
        src="https://code.jquery.com/jquery-3.1.1.min.js"
        integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8="
        crossorigin="anonymous">
    </script>

    <!-- account.js -->
    <script>
        $(document).ready(function() {
            $.getScript("account.js");
        })
    </script>

</body>

</html>
